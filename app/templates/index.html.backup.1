{% extends "base.html" %}

{% block content %}
    <h1>Available Peers</h1>
    <table><form action="" method="POST">
    <h2>Exchanges</h2>
    <td>
        <label>Select :</label>
        <select name="option" width="300px">
            {% for x in site %}
            <option value="{{ x.option }}" SELECTED>{{ x.exchange_name }}</option>
            <input type="text" class="string" value={{ x.exchange_name }} />
            {% endfor %}
        </select>
        <input type="hidden" name="site_name" />
        {#<input type="text" class="string" name="total" value={{  }} readyonly="readonly" />#}
        {% with messages = get_flashed_messages() %}
            {% if messages %}
                <ul class=flashes>
                    {% for message in messages %}
                    <li>{{ message }}</li>
                {% endfor %}
                </ul>
            {% endif %}
        {% endwith %}
        <p> {{ option }}</p>
        {% from "_formhelpers.html" import render_field %}
        <form action="" method="POST">
            {{ render_field(form.search) }}
            <input type=submit value=search>
        </form>
    </td>
    </table>
{% endblock %}
